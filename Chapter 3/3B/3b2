import os
os.system('cls||clear')

# Code starts here

books = int(input())
discount = 24.95 * 0.40
cover = 24.95
min_price = cover - discount
price = books * min_price

shipping = 3
additional = 0.75
first = 1
copy = books - 1
ship = (first * shipping) + (copy * additional)

total = price + ship
print(total)
